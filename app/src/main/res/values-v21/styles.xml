<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/textDarkPrimary</item>
        <item name="actionMenuTextColor">@color/white</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>

        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/primary_custom</item>

        <item name="colorControlNormal">@color/accent</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:textColorHint">@color/accent</item>

        <item name="colorButtonNormal">@color/blue</item>
        <item name="android:textColor">@color/textDarkPrimary</item>
        <item name="android:colorButtonNormal">@color/blue</item>
    </style>

    <style name="ToolBar_theme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/textDarkPrimary</item>
        <item name="android:textColor">@color/textDarkPrimary</item>
        <item name="android:textColorPrimary">@color/textDarkPrimary</item>
        <item name="colorPrimary">@color/textDarkPrimary</item>
        <item name="colorPrimaryDark">@color/textDarkPrimary</item>

        <item name="android:background">#FFFFFF</item>
    </style>

</resources>
